<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body class="min-h-screen flex flex-col">
  <%- include('partials/navbar') %>

  <!-- Enquiry Hero -->
  <section class="bg-enikkom-bg text-white py-20">
    <div class="container mx-auto px-6 text-center">
      <h1 class="text-5xl font-bold mb-6 text-enikkom-header">Contact Us</h1>
      <p class="text-xl mb-8">Get in touch for your industrial construction needs</p>
    </div>
  </section>

  <!-- Enquiry Form -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6 max-w-2xl">
      <form id="enquiry-form" class="bg-gray-50 p-8 rounded-lg shadow-md">
        <div class="mb-6">
          <label for="name" class="block text-gray-700 font-medium mb-2">Full Name *</label>
          <input type="text" id="name" name="name" required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-enikkom-header">
        </div>
        
        <div class="mb-6">
          <label for="email" class="block text-gray-700 font-medium mb-2">Email *</label>
          <input type="email" id="email" name="email" required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-enikkom-header">
        </div>
        
        <div class="mb-6">
          <label for="phone" class="block text-gray-700 font-medium mb-2">Phone Number</label>
          <input type="tel" id="phone" name="phone"
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-enikkom-header">
        </div>
        
        <div class="mb-6">
          <label for="message" class="block text-gray-700 font-medium mb-2">Message *</label>
          <textarea id="message" name="message" rows="5" required
            class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-enikkom-header"></textarea>
        </div>
        
        <button type="submit" class="w-full bg-enikkom-btn text-white py-3 px-4 rounded font-semibold hover:bg-red-700 transition">
          Submit Enquiry
        </button>
        
        <div id="form-message" class="mt-4 text-center hidden"></div>
      </form>
    </div>
  </section>

  <%- include('partials/footer') %>

  <script src="/js/main.js"></script>
</body>
</html>
